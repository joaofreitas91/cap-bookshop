{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "type": "module",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^3.0.1",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookshop-order-control": "cds watch --open bookshopordercontrol/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "cds": {
    "[development]": {
      "requires": {
        "auth": {
          "kind": "mocked",
          "users": {
            "john": {
              "password": "1234",
              "roles": [
                "manager"
              ]
            },
            "bob": {
              "password": "1234",
              "roles": [
                "seller"
              ]
            }
          }
        },
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": "test/db/db.sqlite"
          }
        }
      }
    },
    "[production]": {
      "requires": {
        "auth": {
          "kind": "xsuaa"
        },
        "db": {
          "kind": "hana"
        }
      }
    },
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bookshop-order-control"
  ]
}
