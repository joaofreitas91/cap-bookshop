{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "type": "module",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.5",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-common-content": "^3.0.1",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bookshop": "cds watch --open com.alfa.bookshop/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "[development]": {
      "requires": {
        "auth": {
          "kind": "mocked",
          "users": {
            "john": {
              "password": "1234",
              "roles": [
                "manager"
              ]
            },
            "bob": {
              "password": "1234",
              "roles": [
                "seller"
              ]
            }
          }
        },
        "db": {
          "kind": "sqlite",
          "credentials": {
            "url": "test/db/db.sqlite"
          }
        }
      }
    },
    "[production]": {
      "requires": {
        "auth": {
          "kind": "xsuaa"
        },
        "db": {
          "kind": "hana"
        }
      }
    },
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/bookshop"
  ]
}
