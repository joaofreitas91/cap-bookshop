{
  "xsappname": "bookshop-srv",
  "tenant-mode": "dedicated",
  "scopes": [
    {
      "name": "$XSAPPNAME.seller",
      "description": "seller"
    },
    {
      "name": "$XSAPPNAME.manager",
      "description": "manager"
    }
  ],
  "role-templates": [
    {
      "name": "seller",
      "description": "Role for sellers to manage their sales",
      "scope-references": [
        "$XSAPPNAME.seller"
      ]
    },
    {
      "name": "manager",
      "description": "Role for administrators",
      "scope-references": [
        "$XSAPPNAME.manager"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirectUris": [
      "http://localhost:4004/**",
      "https://*.trial.applicationstudio.cloud.sap/**",
      "https://*.cfapps.us10-001.hana.ondemand.com/**",
      "https://*.cf.us10-001.hana.ondemand.com/**"
    ]
  }
}